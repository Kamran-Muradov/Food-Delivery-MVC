@model IEnumerable<RestaurantVM>
@{
    ViewData["Title"] = "Index";
}
<div class="bg-accent pt-4 pb-5">
    <div class="container pt-2 pb-3 pt-lg-3 pb-lg-4">
        <div class="d-lg-flex justify-content-between pb-3">
            <div class="order-lg-1 pe-lg-4 text-center text-lg-start">
                <h1 class="h3 text-light mb-0">Restaurants</h1>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row gy-3 gx-4 justify-content-end">
        <div class="col-lg-2 col-md-3 col-sm-5 col-12 order-md-1 order-sm-2 order-3">
            <div><a class="btn btn-outline-secondary w-100 collapsed" href="#filter-modal" data-bs-toggle="modal"><i class="ci-filter me-2"></i>Filters</a></div>
        </div>
    </div>
</div>
<section class="container py-4 py-sm-5">
    <div id="filterResults" class="row pt-3 pt-sm-0">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-grid-gutter">
                <a class="card product-card h-100 border-0 shadow pb-2" asp-action="Detail" asp-route-id="@item.Id">
                    <span class="badge badge-end badge-shadow bg-success fs-md fw-medium" data-bs-toggle="tooltip" title="Average meal cost">@(item.MinDeliveryTime)-@(item.MinDeliveryTime + 10) min</span><img class="card-img-top" style="height:280px" src="@item.RestaurantImages.FirstOrDefault(m => m.IsMain)?.Url" alt="McDonald's">
                    <div class="card-body text-center pt-3 pb-4">
                        <h3 class="h5 mb-2">@item.Name</h3>
                        <div class="fs-ms text-muted">@string.Join(", ", item.Tags.Take(3).Select(m => m.Name))</div>
                        <div class="d-flex align-items-center justify-content-between mt-3">
                            <div class="product-price"><span class="text-accent">$@item.DeliveryFee</span></div>
                            <div>
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="fa-solid fa-star" style="color: #fe9f41;"></i>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</section>

<div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Pizza with Salami and Olives</h4>
            <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
    </div>
</div>


