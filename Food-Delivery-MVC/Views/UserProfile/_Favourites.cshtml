@model IEnumerable<FavouriteVM>

@if (Model.Any())
{
    <div class="row pb-2 pb-sm-0 pb-md-3">
        @foreach (var favourite in Model)
        {
            <div class="col-md-4 col-sm-4 col-6 position-relative user-favourite">
                <button data-restaurantId="@favourite.Restaurant.Id" class="delete-favourite" style="all: unset;display: inline-block;cursor: pointer; position:absolute; top:35px;right:25px">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#f3f3f3" class="icon icon-tabler icons-tabler-filled icon-tabler-heart"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M6.979 3.074a6 6 0 0 1 4.988 1.425l.037 .033l.034 -.03a6 6 0 0 1 4.733 -1.44l.246 .036a6 6 0 0 1 3.364 10.008l-.18 .185l-.048 .041l-7.45 7.379a1 1 0 0 1 -1.313 .082l-.094 -.082l-7.493 -7.422a6 6 0 0 1 3.176 -10.215z" /></svg>
                </button>
                <a class="d-block bg-white shadow-sm rounded-3 py-3 py-sm-4 mb-grid-gutter" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@favourite.Restaurant.Id">
                    <img class="d-block mx-auto" src="@favourite.Restaurant.RestaurantImages.FirstOrDefault(ri => ri.IsMain)?.Url" style="width:100%; height:140px;" alt="Brand">
                    <div class="container">
                        <div class="d-flex justify-content-between align-items-center" style="font-size:14px">
                            <p class="text-dark mt-2 mb-2">@favourite.Restaurant.Name</p>
                            <div>
                                <i class="fa-solid fa-star" style="color: #fe9f41;" aria-hidden="true"></i>
                                <span class="text-dark">@favourite.Restaurant.AverageRating.ToString("F1")</span>
                            </div>
                        </div>
                        <span style="color: darkgray; font-size: 12px;">@(favourite.Restaurant.Description.Length > 35 ? $"{favourite.Restaurant.Description.Substring(0, 35)}..." : favourite.Restaurant.Description)</span>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="row justify-content-center pt-lg-4 text-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <h1 class="h3">Your don't have any favourites yet</h1>
        </div>
    </div>
}


