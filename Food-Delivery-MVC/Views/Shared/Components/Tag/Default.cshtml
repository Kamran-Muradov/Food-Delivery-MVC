@model IEnumerable<TagVMVC>
<section class="container py-4 my-lg-3 py-sm-5" id="cuisine">
    <h2 class="text-center pt-4 pt-sm-3">Trending food in your city</h2>
    <p class="text-muted text-center mb-5">Choose what you want and we deliver it to you</p>
    <div class="row">
        @foreach (var tag in Model.Take(6))
        {
            <div class="col-md-4 col-sm-6 mb-grid-gutter">
                <a class="card border-0 shadow" asp-controller="Restaurant" asp-action="GetAllByTagId" asp-route-tagId="@tag.Id">
                    <img class="card-img-top" src="@tag.Image" style="height: 280px" alt="Burgers &amp; Fries">
                    <div class="card-body py-4 text-center">
                        <h3 class="h5 mt-1">@tag.Name</h3>
                    </div>
                </a>
            </div>
        }
    </div>
</section>
