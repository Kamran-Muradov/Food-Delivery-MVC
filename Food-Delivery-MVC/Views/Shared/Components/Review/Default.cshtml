@model IEnumerable<ReviewVM>

<section class="bg-secondary py-5">
    <div class="container py-md-4 pt-3 pb-0 py-sm-3">
        <h2 class="text-center mb-4 mb-md-5">Customer reviews</h2>
        <div class="tns-carousel mb-3">
            <div class="tns-carousel-inner" data-carousel-options="{&quot;items&quot;: 2, &quot;controls&quot;: false, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1, &quot;gutter&quot;:20}, &quot;576&quot;:{&quot;items&quot;:2, &quot;gutter&quot;:20},&quot;850&quot;:{&quot;items&quot;:3, &quot;gutter&quot;:20},&quot;1080&quot;:{&quot;items&quot;:4, &quot;gutter&quot;:25}}}">
                @foreach (var review in Model)
                {
                    <blockquote class="mb-2">
                        <div class="card card-body fs-md text-muted border-0 shadow-sm">
                            <div class="mb-2">
                                <div class="star-rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="star-rating-icon @(i <= review.Rating ? "ci-star-filled active" : "ci-star")"></i>
                                    }
                                </div>
                            </div>@review.Comment
                        </div>
                        <footer class="d-flex justify-content-center align-items-center pt-4">
                            <img class="rounded-circle" src="@review.UserImage" width="50" alt="Richard Davis">
                            <div class="ps-3">
                                <h6 class="fs-sm mb-n1">@review.UserName</h6><span class="fs-ms text-muted opacity-75">@review.CreatedDate</span>
                            </div>
                        </footer>
                    </blockquote>
                }

            </div>
        </div>
    </div>
</section>