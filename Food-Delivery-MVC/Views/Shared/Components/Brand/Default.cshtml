@model IEnumerable<BrandVM>

<section id="brand-area" class="container mb-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="pt-4 pt-sm-3 mb-5 d-inline-block">Popular brands</h2>
    </div>
    <div class="owl-carousel owl-theme owl-loaded">
        <div class="owl-stage-outer">
            <div class="owl-stage">
                @foreach (var brand in Model)
                {
                    <a class="owl-item card border-0 shadow" asp-controller="Brand" asp-action="GetByName" asp-route-name="@brand.Name">
                        <img class="card-img-top" src="@brand.Logo" style="height: 140px" alt="Burgers &amp; Fries">
                        <div class="card-body py-4 text-center">
                            <h3 class="h5 mt-1">@brand.Name</h3>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</section>

