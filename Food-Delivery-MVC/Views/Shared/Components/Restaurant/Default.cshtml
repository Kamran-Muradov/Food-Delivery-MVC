                    <img class="d-block mx-auto" src="@restaurant.RestaurantImages.FirstOrDefault(ri => ri.IsMain).Url" style="width:100%; height:140px;" alt="Brand">
                    <div class=" container">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="text-dark mt-2 mb-2">@restaurant.Name</p>
                            <div>
                                <i class="fa-solid fa-star" style="color: #fe9f41;" aria-hidden="true"></i>
                                <span class="text-dark">@restaurant.AverageRating.ToString("F1")</span>
                            </div>
                        </div>
                        <span style="color: darkgray; font-size: smaller;">@(restaurant.Description.Length > 35 ? $"{restaurant.Description.Substring(0, 35)}..." : restaurant.Description)</span>
                    </div>
                </a>
            </div>
        }
    </div>
</section>