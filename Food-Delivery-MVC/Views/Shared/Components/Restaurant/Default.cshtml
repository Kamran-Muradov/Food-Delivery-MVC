@model PaginationResponse<RestaurantVMVC>

<section class="container pb-4 pt-2 pt-sm-0 pt-md-2 pb-sm-5">
    <h2 class="text-center">Popular restaurants in your city</h2>
    <p class="text-muted pb-4 text-center">Check the best restaurants near you</p>
    <div class="row pb-2 pb-sm-0 pb-md-3">
        @foreach (var restaurant in Model.Datas)
        {
            <div class="col-md-3 col-sm-4 col-6">
                <a class="d-block bg-white shadow-sm rounded-3 py-3 py-sm-4 mb-grid-gutter" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurant.Id">
                    <img class="d-block mx-auto" src="@restaurant.RestaurantImages.FirstOrDefault(ri => ri.IsMain).Url" style="width:100%; height:140px;" alt="Brand">
                    <div class=" container">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="text-dark mt-2 mb-2">@restaurant.Name</p>
                            <div>
                                <i class="fa-solid fa-star" style="color: #fe9f41;" aria-hidden="true"></i>
                                <span class="text-dark">@restaurant.AverageRating.ToString("F1")</span>
                            </div>
                        </div>
                        <span style="color: darkgray; font-size: smaller;">@(restaurant.Description.Length > 35 ? $"{restaurant.Description.Substring(0, 35)}..." : restaurant.Description)</span>
                    </div>
                </a>
            </div>
        }
    </div>
</section>

<section class="container pb-4 pt-2 pt-sm-0 pt-md-2 pb-sm-5">
    <h2 class="text-center">New restaurants in your city</h2>
    <p class="text-muted pb-4 text-center">Check new restaurants near you</p>
    <div class="row pb-2 pb-sm-0 pb-md-3">
        @foreach (var restaurant in Model.Datas.OrderByDescending(r => r.Id))
        {
            <div class="col-md-3 col-sm-4 col-6">
