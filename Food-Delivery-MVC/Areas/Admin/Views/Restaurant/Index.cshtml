@model PaginationResponse<RestaurantVM>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header d-print-none mb-5">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <h2 class="page-title">
                    Restaurants
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="d-flex justify-content-end">
                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="">
                        <div class="btn-list">
                            <a id="toggle-create" class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-report">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                                Create
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<section id="table-area">
    <div class="card">
        <div class="card-body">
            <div id="table-default" class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th><button class="table-sort" data-sort="sort-name">Name</button></th>
                            <th><button class="table-sort" data-sort="sort-name">Phone</button></th>
                            <th><button class="table-sort" data-sort="sort-name">Email</button></th>
                            <th><button class="table-sort" data-sort="sort-name">Address</button></th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody class="table-tbody">
                        @foreach (var item in Model.Datas)
                        {
                            <tr data-id="@item.Id">
                                <td class="sort-name">
                                    <img data-id="@item.Id" src="@item.MainImage" style="width:90px;height:54px" alt="" />
                                </td>
                                <td class="sort-name">@item.Name</td>
                                <td class="sort-name">@item.Phone</td>
                                <td class="sort-name">@item.Email</td>
                                <td class="sort-name">@item.Address</td>
                                <td>
                                    <a class="btn btn-info btn-icon detail" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#modal-detail">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-info-circle"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 9h.01" /><path d="M11 12h1v4h1" /></svg>
                                    </a>
                                    <a class="btn btn-warning btn-icon" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#modal-edit">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-pencil"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" /><path d="M13.5 6.5l4 4" /></svg>
                                    </a>
                                    <a class="btn btn-danger btn-icon delete-btn" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#modal-small">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                                    </a>
                                    <a class="btn btn-outline-primary image-edit " data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#modal-images">
                                        Edit images
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @* Modal Delete *@
    <div class="modal modal-blur fade" id="modal-small" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="modal-title">Are you sure?</div>
                    <div>If you proceed, you will delete data permanently.</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger yes-btn" data-id="0">Yes, delete this data</button>
                    <button id="loading-delete-btn" class="btn btn-danger ms-auto d-none" type="button" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span class="sr-only">Loading...</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("SuperAdmin"))
    {
        @* Modal-Create *@
        <div class="modal modal-blur fade" id="modal-report" tabindex="-1" style="display: none;" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form id="form-create" class="data-create" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Name</label>
                                <input autocomplete="off" id="name" type="text" class="form-control" name="name" placeholder="Name..." />
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Description</label>
                                <textarea autocomplete="off" id="desc" type="text" class="form-control" name="desc" placeholder="Description..."></textarea>
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Phone</label>
                                <input autocomplete="off" id="phone" type="text" class="form-control" name="phone" placeholder="Phone...">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Email</label>
                                <input autocomplete="off" id="email" type="text" class="form-control" name="email" placeholder="example@example.com">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Delivery fee</label>
                                <input autocomplete="off" id="delfee" type="number" class="form-control" name="delfee">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Minimum order</label>
                                <input autocomplete="off" id="minorder" type="number" class="form-control" name="minorder">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Minimum delivery time</label>
                                <input autocomplete="off" id="mintime" type="number" class="form-control" name="mintime">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Address</label>
                                <input autocomplete="off" id="address" type="text" class="form-control" name="address" placeholder="Address...">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Website</label>
                                <input autocomplete="off" id="website" type="text" class="form-control" name="website">
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label required">Upload images</label>
                                <input autocomplete="off" id="images" type="file" multiple class="form-control" name="images">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Rating</label>
                                        <select id="rating" class="form-select">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Active</label>
                                        <select id="active" class="form-select">
                                            <option value="true">true</option>
                                            <option value="false">false</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label required">Tags</label>
                                        <select multiple id="tags" name="tags" class="form-select">
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                                Cancel
                            </a>
                            <button id="create-btn" type="submit" href="#" class="btn btn-primary ms-auto">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg>
                                Create
                            </button>
                            <button id="loading-create-btn" class="btn btn-primary ms-auto d-none" type="button" disabled>
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="sr-only">Loading...</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    @* Modal-Edit *@
    <div class="modal modal-blur fade" id="modal-edit" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form data-id="" id="form-edit" class="data-create" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Name</label>
                            <input autocomplete="off" id="name" type="text" class="form-control" name="name" placeholder="Name..." />
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Description</label>
                            <textarea autocomplete="off" id="desc" type="text" class="form-control" name="desc" placeholder="Description..."></textarea>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Phone</label>
                            <input autocomplete="off" id="phone" type="text" class="form-control" name="phone" placeholder="Phone...">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Email</label>
                            <input autocomplete="off" id="email" type="text" class="form-control" name="email" placeholder="example@example.com">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Delivery fee</label>
                            <input autocomplete="off" id="delfee" type="number" class="form-control" name="delfee">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Minimum order</label>
                            <input autocomplete="off" id="minorder" type="number" class="form-control" name="minorder">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Minimum delivery time (minutes)</label>
                            <input autocomplete="off" id="mintime" type="number" class="form-control" name="mintime">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Address</label>
                            <input autocomplete="off" id="address" type="text" class="form-control" name="address" placeholder="Address...">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Website</label>
                            <input autocomplete="off" id="website" type="text" class="form-control" name="website">
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label required">Upload images</label>
                            <input autocomplete="off" id="images" type="file" multiple class="form-control" name="images">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Rating</label>
                                    <select id="rating" class="form-select">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Active</label>
                                    <select id="active" class="form-select">
                                        <option value="true">true</option>
                                        <option value="false">false</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label required">Tags</label>
                                    <select multiple id="tags" name="tags" class="form-select">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="edit-btn" type="submit" href="#" class="btn btn-warning ms-auto ">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg>
                            Edit
                        </button>
                        <button id="loading-edit-btn" class="btn btn-warning ms-auto d-none" type="button" disabled>
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="sr-only">Loading...</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @* Modal-Images *@
    <div class="modal modal-blur fade" id="modal-images" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content container">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="row images-area">
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Modal-Detail *@
    <div class="modal modal-blur fade" id="modal-detail" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content container">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title">Detailed View</h5>
                </div>
                <div class="row images-area">
                </div>
                <div class="data-area">
                </div>

                <div class="mb-0 mt-3 flex-grow ">
                    <p class="mb-0  font-weight-light"><strong>Categories:</strong></p>
                    <ul class="mb-3 list-group list-group-flush">
                    </ul>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="pagination-area d-flex justify-content-center mt-3">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled prev">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class="page-item @(i == 1 ? "active" : "")"><a class="page-link page-num" href="#">@i</a></li>
                }
                <li class="page-item">
                    <a class="page-link @(Model.TotalPage == 1? "disabled" : "")" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</section>


@section js {
    <script src="~/admin/dist/js/restaurant.js"></script>
}

